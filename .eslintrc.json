{
  "extends": ["airbnb", "prettier", "plugin:node/recommended"],
  "plugins": ["prettier"],
  "rules": {
    "no-console": "off",
    "no-unused-vars": ["error", { "argsIgnorePattern": "req|res|next|val" }],
    "consistent-return": "off",
    "no-underscore-dangle": [
      "error",
      {
        "allow": ["_id"],
        "allowAfterThis": true,
        "allowAfterSuper": true,
        "enforceInMethodNames": false
      }
    ],
    "func-names": "off",
    "no-return-await": "off"
  }
}
